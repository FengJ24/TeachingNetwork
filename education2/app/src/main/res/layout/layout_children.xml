<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout
        android:id="@+id/catlog_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/div_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/catlog_time_imageVie"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_line_top"
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:background="@color/bg_color1" />

            <ImageView
                android:id="@+id/circle_imageview"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/shape_gray_cicle" />

            <ImageView
                 android:id="@+id/iv_line_dow"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/bg_color1" />
        </LinearLayout>

        <TextView
            android:id="@+id/second_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="课程名称"
            android:textColor="@color/tongyi_textcolor"
            android:textSize="13sp" />
         <TextView
            android:id="@+id/catlog_time_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="18dp"
            android:text=""
            android:textColor="@color/tongyi_textcolor"
            android:textSize="13sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
