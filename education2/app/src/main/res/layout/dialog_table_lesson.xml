<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--全部界面-->
    <LinearLayout
        android:id="@+id/choose_grade_subject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="19dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="选择学年"
            android:textColor="@color/tab_select"
            android:textSize="12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tab_select"/>

        <com.university.education.view.GridViewForScrollView
            android:id="@+id/grade_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.university.education.view.GridViewForScrollView>

        <LinearLayout
            android:id="@+id/subjuct_item_lal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="19dp"
                android:text="选择学期"
                android:textColor="@color/tab_select"
                android:textSize="12sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tab_select"/>

            <com.university.education.view.GridViewForScrollView
                android:id="@+id/subject_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.university.education.view.GridViewForScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="确定"
            android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>